<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Spinner background color -->
            <solid android:color="#FFFFFF" />

            <!-- Add border -->
            <stroke
                android:color="#BDBDBD"
                android:width="1dp" />

            <!-- Add rounded corners -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
